<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListParentLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_parent_layout_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ListItemEntryImageStyle">
        <item name="android:layout_width">@dimen/list_image_width</item>
        <item name="android:layout_height">@dimen/list_image_height</item>
        <item name="android:layout_marginLeft">@dimen/layout_dimen</item>
        <item name="android:layout_marginRight">@dimen/list_dimen_right</item>
        <item name="android:layout_marginTop">@dimen/list_dimen_vertical</item>
        <item name="android:layout_marginBottom">@dimen/list_dimen_vertical</item>
    </style>

    <style name="ListItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/layout_dimen</item>
    </style>

    <style name="ListItemEntryTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/padding_dimen_bottom</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="ListItemEntryLocationTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
    </style>

    <style name="ListIconStyle">
        <item name="android:layout_width">@dimen/plan_icon_width</item>
        <item name="android:layout_height">@dimen/play_icon_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/layout_dimen</item>
        <item name="android:src">@drawable/ic_navigate_next_black_24dp</item>
    </style>

    <style name="LineBreakStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_break_height</item>
        <item name="android:layout_marginTop">@dimen/center_dimen</item>
        <item name="android:layout_marginBottom">@dimen/center_dimen</item>
        <item name="android:layout_marginLeft">@dimen/layout_dimen</item>
        <item name="android:layout_marginRight">@dimen/layout_dimen</item>
        <item name="android:background">@color/colorLightGray</item>
    </style>

    <style name="DrawerLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="HomeScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/center_dimen</item>
    </style>

    <style name="HomeLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/center_dimen</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HomeImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_image_height</item>
        <item name="android:layout_margin">@dimen/layout_dimen</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/batangas_pic01</item>
    </style>

    <style name="HomeTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/layout_dimen</item>
        <item name="android:layout_marginRight">@dimen/layout_dimen</item>
        <item name="android:lineSpacingExtra">@dimen/content_spacing</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="NavHeaderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="NavHeaderImageStyle">
        <item name="android:layout_width">@dimen/nav_image_width</item>
        <item name="android:layout_height">@dimen/header_image_height</item>
        <item name="android:layout_marginTop">@dimen/center_dimen</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/batangas_flag</item>
    </style>

    <style name="NavHeaderPrimaryTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/layout_dimen_top</item>
        <item name="android:text">@string/batangas</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="NavHeaderSecondaryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/philippines</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="TourScrollStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/center_dimen</item>
    </style>

    <style name="TourLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/center_dimen</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TourImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_image_height</item>
        <item name="android:layout_margin">@dimen/center_dimen</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TourNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/center_dimen</item>
        <item name="android:layout_marginRight">@dimen/center_dimen</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="TourAddressStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/center_dimen</item>
        <item name="android:layout_marginRight">@dimen/center_dimen</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="TourDescStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/center_dimen</item>
        <item name="android:layout_marginRight">@dimen/center_dimen</item>
        <item name="android:lineSpacingExtra">@dimen/content_spacing</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

</resources>
